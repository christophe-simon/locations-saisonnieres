{% set adUrl = path('app_ad_show', {'slug': ad.slug}) %}

<div class="col-md-4">
    <div class="card bg-light mb-3">
        <div class="card-header text-center">
            {{ ad.rooms }} chambres, <strong>{{ ad.price | number_format(2, ',', ' ') }}&euro; / nuit</strong><br>

            {% if ad.comments | length > 0 %}
                {% include 'common/rating.html.twig' with {'rating': ad.averageRating} %}
            {% else %}
                <small>Pas encore not√©</small>
            {% endif %}
        </div>

        <a href="{{ adUrl }}">
            <img src="{{ ad.coverPicture }}" alt="{{ ad.title }}" style="height: 200px; width: 100%; display: block;">
        </a>

        <div class="card-body clearfix">
            <h4 class="card-title">
                {{ ad.title }}
            </h4>
            <p class="card-text">
                {{ ad.introduction }}
            </p>
            <a href="{{ adUrl }}" class="btn btn-primary float-end">Consulter l'annonce</a>

            {% if app.user and app.user == ad.manager %}
                <a href="{{ path('app_ad_update', {'slug': ad.slug}) }}" class="btn btn-secondary">Modifier l'annonce</a>
            {% endif %}
        </div>
    </div>
</div>